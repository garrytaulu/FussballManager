<% title 'Viewing Game' %>
<h2><%= yield(:title) %></h2>
<p>
  <b>Id:</b>
  <%= @game.id %>
</p>
<p>
  <b>Blue Attacker: </b>
  <%= @game.blueAttacker.name %>
</p>
<p>
  <b>Blue Defender: </b>
  <%= @game.blueDefender.name %>
</p>
<p>
  <b>Red Attacker: </b>
  <%= @game.redAttacker.name %>
</p>
<p>
  <b>Red Defender: </b>
  <%= @game.redDefender.name %>
</p>
<p>
  <b>Blue Team Score: </b>
  <%= @game.blueTeamScore  %>
</p>
<p>
  <b>Red Team Score: </b>
  <%= @game.redTeamScore %>
</p>
<p>
  <b>Status: </b>
  <%= @game.status %>
</p>

<%= link_to 'Back to games', games_path %>


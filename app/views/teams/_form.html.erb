<%= form_for(@team) do |f| %>
  <% if @team.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
      <% @team.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @players.count() > 1 %>
    <div class="field">
      <%= f.label :offense %><br />
      <%= collection_select(:team, :offense, @players, :id, :name, {prompt: true})  %>
    </div>
    <div class="field">
      <%= f.label :defense %><br />
      <%= collection_select(:team, :defense, @players, :id, :name, {prompt: true})  %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% else %>
    <p>There are no players. Please add some players before create teams.</p>
  <% end %>
<% end %>

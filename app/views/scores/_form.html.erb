<h2><%= yield(:title) %></h2>
<%= form_for([@score.game, @score]) do |f| %>
    <div class="control-group">
      <%= f.label(:player, :class => 'control-label') %>
      <div class="controls">
        <%= scores_player_select(@score.game, @score, :player, :id, true) %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <label class="checkbox">
          <%= f.check_box :own_goal %> Own goal?
        </label>
      </div>
    </div>
    <div class="actions">
      <%= f.submit('Save', :class => 'btn btn-success') %>
    </div>
<% end %>

<%= link_to 'Back to game scores', game_scores_path(@score.game) %>